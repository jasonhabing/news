<h1>Listing word_stats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>One month frequency</th>
      <th>One week frequency</th>
      <th>One day frequency</th>
      <th>Half day frequency</th>
      <th>Quarter day frequency</th>
      <th>One hour frequency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_stats.each do |word_stat| %>
      <tr>
        <td><%= word_stat.name %></td>
        <td><%= word_stat.one_month_frequency %></td>
        <td><%= word_stat.one_week_frequency %></td>
        <td><%= word_stat.one_day_frequency %></td>
        <td><%= word_stat.half_day_frequency %></td>
        <td><%= word_stat.quarter_day_frequency %></td>
        <td><%= word_stat.one_hour_frequency %></td>
        <td><%= link_to 'Show', word_stat %></td>
        <td><%= link_to 'Edit', edit_word_stat_path(word_stat) %></td>
        <td><%= link_to 'Destroy', word_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

